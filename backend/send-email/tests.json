{
  "tests": [
    {
      "name": "Test CORS OPTIONS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS"
      }
    },
    {
      "name": "Test email sending with valid data",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Тестов",
        "phone": "+7 905 710 8890",
        "email": "test@example.com",
        "project": "Минимализм",
        "comment": "Тестовая заявка"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test GET method not allowed",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "Method not allowed"
      },
      "bodyMatcher": "partial"
    }
  ]
}
